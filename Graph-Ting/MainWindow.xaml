<Window x:Class="Graph_Ting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Graph_Ting"
        Title="Binary Tree Display" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" x:Name="BinaryTreeView" Margin="10" />
        <local:AvlCompo Grid.Column="1"/>
    </Grid>
</Window>
